{
  "name": "backend",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run build:ts && npm run copy:assets",
    "copy:assets": "copyfiles -u 1 \"src/**/*.ejs\" \"public/**/*\" \"db/**/*.sql\" dist",
    "build:ts": "tsc",
    "watch:ts": "tsc --watch",
    "prisma:generate": "npx prisma generate",
    "start": "set NODE_ENV=production&& node dist/app.js",
    "dev": "tsx --env-file=.env.development --watch app.ts",
    "dev:env": "set NODE_ENV=development&& tsx watch --env-file=.env.development -- src/app.ts",
    "prod:start": "set NODE_ENV=production&& node dist/app.js",
    "migrate:dev": "set NODE_ENV=development&& npx prisma migrate dev",
    "migrate:deploy": "set NODE_ENV=production&& npx prisma migrate deploy",
    "seed:dev": "set NODE_ENV=development&& tsx seed.ts",
    "seed:prod": "set NODE_ENV=production&& tsx seed.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "@types/cors": "^2.8.19",
    "@types/passport-jwt": "^4.0.1",
    "bcryptjs": "^3.0.2",
    "concurrently": "^9.2.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "jsonwebtoken": "^9.0.2",
    "nodemon": "^3.1.10",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^24.5.1",
    "@types/passport": "^1.0.17",
    "@types/passport-local": "^1.0.38",
    "@types/pg": "^8.15.5",
    "copyfiles": "^2.4.1",
    "prisma": "^6.16.2",
    "tsx": "^4.19.2",
    "typescript": "~5.9.3"
  }
}
